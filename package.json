{
  "name": "JD-IMAMFAHRURROFI-ZAPWA",
  "version": "0.0.1",
  "author": "Imam Fahrur Rofi",
  "devDependencies": {
    "bun-types": "latest",
    "turbo": "^2.5.5"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "description": "ZapWA Backend and Frontend using Bun, Hono, React, Vite, and Turborepo",
  "homepage": "https://github.com/masfahru/jd-imamfahrurrofi-zapwa",
  "keywords": [
    "bun",
    "hono",
    "react",
    "vite",
    "monorepo",
    "turbo"
  ],
  "license": "Attribution-NonCommercial-ShareAlike 4.0 International",
  "packageManager": "bun@1.2.4",
  "scripts": {
    "dev": "turbo dev",
    "dev:client": "turbo dev --filter=client",
    "dev:server": "turbo dev --filter=server",
    "build": "turbo build",
    "build:client": "turbo build --filter=client",
    "build:server": "turbo build --filter=server",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "db:generate": "cd server && bun run db:generate",
    "db:migrate": "cd server && bun run db:migrate",
    "db:seed": "cd server && bun run db:seed"
  },
  "workspaces": [
    "./server",
    "./client",
    "./shared"
  ]
}
